            <div class="row">
                <div class="col-sm-12">
                    <div class="form-title" style="text-align:center">
                        <h4>Добавить текст</h4>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <form method="post" action="">
                        <div class="form-group">
                            <input type="hidden" value="@ViewBag.Layout" name="Text.Layout" />
                            <input type="hidden" value="@Model.Topic.Id" name="TopicId" />
                            <input type="hidden" value="@Model.Topic.Id" name="Text.TopicId" />
                            <h5><label for="Text.Title">Введите оглавление:</label></h5>
                            <input class="form-control form-control-bottom" type="text" name="Text.Title" />
                            <h5><label for="Text.Plot">Введите текст:</label></h5>
                            <textarea rows="7" class="form-control form-control-bottom" type="text" name="Text.Plot"></textarea>
                            <input class="btn btn-info nav-button right" type="submit" value="Добавить" />
                        </div>
                    </form>
                </div>
            </div>
        }
